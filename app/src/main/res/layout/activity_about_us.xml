<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutUs">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="40dp"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="20dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WasteIt is an Android based platform for waste Management in \n Ares facing Difficulty in the sector.  "
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Creators : "
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="JOEL JOSE \n NOAH AHMED \n ANANTHU AJAY \n ARUN A K \n SANEEN K P"
                android:textStyle="italic"
                android:textColor="@color/apptheme"
                android:layout_margin="20dp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>